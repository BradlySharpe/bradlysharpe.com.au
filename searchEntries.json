---
layout: compress
---
{
	entries = [
	{% assign firstPost = 1 %}
	{% for post in site.posts %}
	  {% if firstPost == 0 %}, {% endif %}{ id: '{{ post.id }}', title: '{{ post.title }}', categories: '{{ post.categories | first | capitalize_category }}', date: '{{ post.date }}', body: '{{ post.content | strip_html }}', excerpt: '{{ post.excerpt | strip_html }}'}
	  {% assign firstPost = 0 %}
	{% endfor %}
	]
}